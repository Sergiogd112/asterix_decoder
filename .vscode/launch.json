    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "decoder",
            "args": ["--test-radar","--parallel","--max-messages","10000"]
        },
        {
            "name": "Python: Run Tests (with Rust Build)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test.py",
            "console": "integratedTerminal",
            "preLaunchTask": "Build Rust Decoder"
        }
    ]
}